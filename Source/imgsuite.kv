<Login>:
    md_bg_color: get_color_from_hex("#000000")

    MDBoxLayout:
        orientation:"vertical"
        padding: [100,150,100,150]
        spacing: 20

        Image:
            source: "IS_logo.png"
            size: self.width, self.height

        Label:
            font_size:60
            text: "Log-in"
            color: get_color_from_hex("#FFFFFF")

        MDTextField:
            id: user
            hint_text: "username"
            icon_right: "account"
            size_hint_x: None
            width: 600
            font_size: 40
            pos_hint: {"center_x": 0.5}
            color_mode: 'custom'
            line_color_focus: get_color_from_hex("#31D98C")
            theme_text_color: "Custom"
            text_color: get_color_from_hex("#31D98C")

        MDTextField:
            id: pwd
            hint_text: "password"
            icon_right: "key"
            size_hint_x: None
            width: 600
            font_size: 40
            pos_hint: {"center_x": 0.5}
            password: True
            color_mode: 'custom'
            line_color_focus: get_color_from_hex("#31D98C")
            theme_text_color: "Custom"
            text_color: get_color_from_hex("#31D98C")

        MDFloatLayout:
            MDCheckbox:
                size_hint: None, None
                side: "48dp", "48dp"
                pos_hint: {"center_x": 0.4, "center_y": 0.4}
                on_active: app.show_passwordlogin(*args)
            MDLabel:
                id: show
                text: "Show Password"
                pos_hint: {"center_x": 0.95, "center_y": 0.4}
        

        MDFlatButton:
            text: "New here? [color=31D98C]Sign-up[/color]"
            text_color: get_color_from_hex("#31D98C")
            font_size: 30
            pos_hint: {"center_x": .5, "center_y": .5}
            on_press: 
                root.manager.current = "Signup"
                

        MDRectangleFlatButton:
            text: "    Log in    "
            font_size: 50
            pos_hint: {"center_x": 0.5} 
            on_release: 
                root.manager.current = "Projects"
            theme_text_color: "Custom"
            md_bg_color: get_color_from_hex("#31D98C")
            text_color: "white"














