<Root>:

    imageViewer: imageViewer
    nav_drawer: nav_drawer
    imgHeightLabel: imgHeightLabel
    imgWidthLabel: imgWidthLabel

    MDNavigationLayout:

        ScreenManager:    
               
            MDScreen:
                md_bg_color: get_color_from_hex("#000000")

                MDBoxLayout:
                    orientation:"vertical"
                    
                    MDTopAppBar:
                        left_action_items: [['cog', lambda x: nav_drawer.set_state("open")]]
                        title: "Image Suite"
                        halign: "center"
                        md_bg_color: get_color_from_hex("#31D98C")
                        specific_text_color: get_color_from_hex("#000000")


                    #MDFloatLayout:
                    #
                    #    MDFlatButton:
                    #        text: "ALERT DIALOG"
                    #        pos_hint: {'center_x': .5, 'center_y': .5}
                    #        on_release: app.show_alert_dialog()

                    #Side Buttons Layout
                    MDBoxLayout:
                        #NEED TO GREY OUT BUTTONS AND ADD ACTIONS
                        orientation:"horizontal"
                        padding: [20,20,20,20]
                        size_hint_x: 0.25

                        #Undo Layout
                        MDBoxLayout:
                            orientation:"vertical"
                            adaptive_height: True
                            padding: [2,2,2,2]

                            MDIconButton:
                                user_font_size: "32sp"
                                icon: "undo"
                                on_press: root.project.undo(root)
                                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                theme_text_color: "Custom"
                                text_color: get_color_from_hex("#31D98C")

                            Label:
                                id: lblUndo
                                text: "Undo"
                                valign: "center"
                                
                        #Redo Layout
                        MDBoxLayout:
                            orientation:"vertical"
                            adaptive_height: True
                            padding: [2,2,2,2]

                            MDIconButton:
                                user_font_size: "32sp"
                                icon: "redo"
                                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                on_press: root.project.redo(root)
                                theme_text_color: "Custom"
                                text_color: get_color_from_hex("#31D98C")

                            Label:
                                id: lblRedo
                                text: "Redo"
                                valign: "center"

                        #Save Layout
                        MDBoxLayout:
                            orientation:"vertical"
                            adaptive_height: True
                            padding: [2,2,2,2]

                            MDIconButton:
                                user_font_size: "32sp"
                                icon: "content-save"
                                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                on_press: 
                                    root.saveProject()
                                    root.manager.current = "Projects"
                                theme_text_color: "Custom"
                                text_color: get_color_from_hex("#31D98C")

                            Label:
                                id: lblSave
                                text: "Save"
                                valign: "center"
                        
                        #New Project Layout
                        MDBoxLayout:
                            orientation:"vertical"
                            adaptive_height: True
                            padding: [2,2,2,2]

                            MDIconButton:
                                user_font_size: "32sp"
                                icon: "new-box"
                                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                on_press: root.makeNewProject()
                                theme_text_color: "Custom"
                                text_color: get_color_from_hex("#31D98C")

                            Label:
                                id: lblNew
                                text: "New"
                                valign: "center"

                        #Previous Project Layout
                        MDBoxLayout:
                            orientation:"vertical"
                            adaptive_height: True
                            padding: [2,2,2,2]

                            MDIconButton:
                                user_font_size: "32sp"
                                icon: "folder-move"
                                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                on_press: root.importProject('defaultName.ip')
                                theme_text_color: "Custom"
                                text_color: get_color_from_hex("#31D98C")

                            Label:
                                id: lblImport
                                text: "Import"
                                valign: "center"

                    #Place Holder/Default Image
                    Image:
                        id: imageViewer
                        source: "Intro.png"
                        #No cache is very important or the whole application doesn't work.
                        nocache: True

                    #Widget:
                        #id: image_canvas
                        #size_hint: (0.0001, 0.0001)
                        #canvas:
                            #Rectangle:
                                #id: root.rect_box
                                #pos: (root.x1, root.y1)
                                #size: (root.t_x, root.t_y)
                    MDBoxLayout:
                        orientation:"horizontal"

                        #Import New Image Layout
                        MDBoxLayout:
                            orientation:"vertical"
                            adaptive_height: True
                            padding: [20,20,20,20]

                            MDIconButton:
                                user_font_size: "32sp"
                                icon: "application-import"
                                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                on_press: root.file_manager_open()
                                theme_text_color: "Custom"
                                text_color: get_color_from_hex("#31D98C")

                            Label:
                                id: lblImportImage
                                text: "Import Image"
                                valign: "top"
                        
                        #Equ Hist Layout
                        MDBoxLayout:
                            orientation:"vertical"
                            adaptive_height: True
                            padding: [20,20,20,20]

                            MDIconButton:
                                user_font_size: "32sp"
                                icon: "chart-histogram"
                                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                on_press: root.equalizeImage()
                                theme_text_color: "Custom"
                                text_color: get_color_from_hex("#31D98C")

                            Label:
                                id: lblEqualizeHist
                                text: "Equalize Histogram"
                                valign: "top"
                        
                        #ThreshHolding Layout
                        MDBoxLayout:
                            orientation:"vertical"
                            adaptive_height: True
                            padding: [20,20,20,20]

                            MDIconButton:
                                user_font_size: "32sp"
                                icon: "gradient-vertical"
                                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                on_press: root.thresholdImage()
                                theme_text_color: "Custom"
                                text_color: get_color_from_hex("#31D98C")

                            Label:
                                id: lblThreshold
                                text: "Threshold"
                                valign: "top"  

        #Side Bar Drawer
        MDNavigationDrawer:
        

            id: nav_drawer
            md_bg_color: get_color_from_hex("1f1f1f")

            ContentNavigationDrawer:
                orientation: "vertical"
                padding: "8dp"
                spacing: "8dp"

                    

                MDFloatLayout:
                    pos_hint: {"center_x": 0.5, "center_y": 1}
                    MDLabel:
                        text:  "Information: "   
                        pos_hint: {"center_x": 0.5, "center_y": 0.9}
                    MDLabel:
                        text:  "Histogram Equalization is accomplished by effectively spreading out the most frequent intensity values, i.e. stretching out the intensity range of the image.\n\nThresholding is a type of image segmentation, where we change the pixels of an image to make the image easier to analyze. In thresholding, we convert an image from colour or grayscale into a binary image, i.e., one that is simply black and white."
                        font_style: "Caption"
                        pos_hint: {"center_x": 0.5, "center_y": 0.4}
                    
                MDFloatLayout:
                    pos_hint: {"center_x": 0.5, "center_y": 1}

                    MDLabel:
                        text:  "Equalize an area on the picture"
                        pos_hint: {"center_x": 0.5, "center_y": 0.9}

                    MDTextField:
                        hint_text: "Height Limit (input as #, #)"
                        pos_hint: {"center_x": 0.5, "center_y": 0.7}
                        id: TopLeftid
                      
                    MDTextField:
                        hint_text: "Width Limit (input as #, #)"
                        pos_hint: {"center_x": 0.5, "center_y": 0.45}
                        id:BottomRightid
                                               
                    MDRectangleFlatIconButton:
                        icon: "chart-histogram" 
                        pos_hint: {"center_x": 0.5, "center_y": 0.2}    
                        text: "Equalize the selected area"
                        on_press: root.test1()

                        
                    MDRectangleFlatButton:
                        id: menu
                        pos_hint: {"center_x": 0.5, "center_y": -0.05}
                        text: "Other Options"
                        on_press: root.menuDropDown()
                
                
                MDLabel:
                    id: info
                    font_style: "Caption"
                    size_hint_y: None
                    pos_hint: {"center_x": 0.5, "center_y": 0.3}
                    #height: self.texture_size[1]

                MDBoxLayout:
                    md_bg_color: get_color_from_hex("1f1f1f")
                

                    
                    MDBoxLayout:
                        
                        orientation:"horizontal"
                        Label:
                            id: imgHeightLabel
                            font_style: "Caption"
                            size_hint_y: None
                            #height: self.texture_size[1]
                            
                            
                        Label:
                            id: imgWidthLabel
                            font_style: "Caption"
                            size_hint_y: None
                            #height: self.texture_size[1]
